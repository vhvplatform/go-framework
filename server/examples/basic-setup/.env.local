# Example Environment Configuration for Development
# Copy this file to .env and customize for your environment

# JWT Configuration
JWT_SECRET=dev-secret-change-in-production-IMPORTANT
JWT_EXPIRATION=24h

# Database Configuration
MONGODB_URI=mongodb://mongodb:27017
MONGODB_DATABASE=saas_platform
MONGODB_USER=
MONGODB_PASSWORD=

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# Message Queue Configuration
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_MANAGEMENT_URL=http://rabbitmq:15672

# Service Ports
API_GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8081
AUTH_SERVICE_GRPC_PORT=50051
USER_SERVICE_PORT=8082
USER_SERVICE_GRPC_PORT=50052
TENANT_SERVICE_PORT=8083
TENANT_SERVICE_GRPC_PORT=50053
NOTIFICATION_SERVICE_PORT=8084
NOTIFICATION_SERVICE_GRPC_PORT=50054
SYSTEM_CONFIG_SERVICE_PORT=8085
SYSTEM_CONFIG_SERVICE_GRPC_PORT=50055

# Observability
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
JAEGER_PORT=16686

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# Log Level
LOG_LEVEL=debug

# Environment
ENVIRONMENT=development
