{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All Services",
            "type": "shell",
            "command": "make build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Start Docker Services",
            "type": "shell",
            "command": "make start",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Stop Docker Services",
            "type": "shell",
            "command": "make stop",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "make test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run Unit Tests",
            "type": "shell",
            "command": "make test-unit",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run Integration Tests",
            "type": "shell",
            "command": "make test-integration",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Lint Code",
            "type": "shell",
            "command": "golangci-lint run ./...",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Generate Protobuf",
            "type": "shell",
            "command": "make proto",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Docker Build",
            "type": "shell",
            "command": "make docker-build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Check Service Health",
            "type": "shell",
            "command": "make status",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "View Logs",
            "type": "shell",
            "command": "make logs",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}
