{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug API Gateway",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/../../go-api-gateway/cmd/main.go",
            "env": {
                "AUTH_SERVICE_URL": "localhost:50051",
