        {
            "name": "Debug Current File",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}",
            "showLog": true
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "${command:pickProcess}"
        }
    ],
    "compounds": [
        {
            "name": "Debug All Services",
            "configurations": [
                "Debug Auth Service",
                "Debug User Service",
                "Debug Tenant Service",
                "Debug Notification Service",
                "Debug System Config Service",
                "Debug API Gateway"
            ],
            "stopAll": true
